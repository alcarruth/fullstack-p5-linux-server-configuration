#!/bin/bash
# settings

# Users added
export GRADER="grader"
export STUDENT="carruth"
export CATALOG="catalog"

# Secure Shell
export SSH_PORT="2200"

# Apache2 environment
export APACHE2_CONF_DIR='/etc/apache2/sites-enabled'
export APACHE2_CONF='/etc/apache2/sites-available/000-udacity-project.conf'
export RANDOM_NAMES_WSGI_CONF='/etc/apache2/sites-available/random-names.conf'
export TICKETS_WSGI_CONF='/etc/apache2/sites-available/tickets-r-us.conf'

# PostgreSQL environment
export POSTGRESQL_CONF_DIR="/etc/postgresql/9.5/main"
export PG_HBA_CONF="pg_hba.conf"
export PG_IDENT_CONF="pg_ident.conf"
export DB_OWNER=${STUDENT}
export DB_USER=${CATALOG}
export DB_PROJECT="udacity"
